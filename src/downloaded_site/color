    <script type="text/delayscript">
        var color = {r: 255, g: 255, b: 255, a: 1};
        var canvas = document.getElementById('myCanvas');
        var ctx = canvas.getContext('2d');
        var result = document.getElementById('result');
        var mouseDown = false;


        zoom.oninput =  function(e){
            //myCanvas.style.width = zoom.value + 'px';
            $('#myCanvas').css('width', zoom.value + 'px');
        };
        $('.zoomButtons').on('click', function(){
            zoom.value = parseFloat(zoom.value) + (zoom.max - zoom.min) * $(this).attr('data-multiplier');
            zoom.oninput();
        });

        var imageObj = new Image();
        imageObj.onload = function() {
            canvas.width = imageObj.width;
            canvas.height = imageObj.height;
            ctx.drawImage(imageObj, 0, 0);
            //drawGrays();

            result = document.getElementById('result');
            zoom.value = zoom.min = Math.min(myCanvas.width, result.clientWidth - 20);
            zoom.max = Math.max(myCanvas.width*2, result.clientWidth);
            zoom.oninput();
        };
        imageObj.src = '/tools/color/color-picker5.png';


        var zoomBox = new ZoomBox(canvas);

        //if (/WebKit/.test(navigator.userAgent)) document.getElementById('showForWebkit').style.display = 'inline';


        function drawGrays(){
            var left = canvas.width - 50;
            ctx.lineWidth = 1;
            ctx.globalAlpha=1;
            //ctx.imageSmoothingEnabled= false;

            for (var i=0; i<256; i++){
                ctx.beginPath();
                ctx.fillStyle = ctx.strokeStyle = `rgb(${i},${i},${i})`;
                ctx.moveTo(left + 0.5, 255-i + 0.5);
                ctx.lineTo(left + 50 + 0.5, 255-i + 0.5);
                ctx.stroke();
            }
        }

        $$('#downloadLnk')[0].addEventListener('click', function(){
            var dt = canvas.toDataURL('image/jpeg');
            this.href = dt;
        }, false);

        function copy(){
            try {
                if (document.execCommand('copy')) snackbar('Код скопирован в буфер обмена', 3);
            } catch (e) {
                // do nothing
            }
        }

        function getMousePos(e) { //d({layerX: e.layerX,  layerY: e.layerY,  offsetX: e.offsetX,  offsetY: e.offsetY})
            var pos = e.touches ? e.touches[0] : e;

            var x = 0, y = 0
            if (typeof pos.offsetX === 'undefined') {
                var offset = $(e.target).offset();
                x = pos.pageX - offset.left;
                y = pos.pageY - offset.top;
            } else {
                x = pos.offsetX;
                y = pos.offsetY;
            }

            return {
                x: Math.round(e.target.width  / e.target.scrollWidth  * x),
                y: Math.round(e.target.height / e.target.scrollHeight * y),
            }
        }

        canvas.addEventListener('mousedown', onMouseDown, false);
        canvas.addEventListener('mouseup', onMouseUp, false);
        canvas.addEventListener('mousemove', onMouseMove, false);
        canvas.addEventListener('touchstart', onMouseDown, false);
        canvas.addEventListener('touchend', onMouseUp, false);
        canvas.addEventListener('touchmove', onMouseMove, false);

        function onMouseDown(e) {
            mouseDown = true;
            onMouseMove(e);

            $(recentHead).show();
            $(recent).prepend(`<a style="background-color: ${colorRgb.value};"></a>`);
            //recent.childNodes.forEach(function(v,k){ if (k >= 7) v.remove() });
        }
        function onMouseUp(e) {
            mouseDown = false;
        }
        function onMouseMove(e) {
            if (!mouseDown) return;

            var mousePos = getMousePos(e);
            var pixel;
            try {
                pixel = ctx.getImageData(mousePos.x, mousePos.y, 1, 1).data;
            } catch (e) {
                pixel = [0,0,0,0];
            }
            colorRgb.value = Color.colorToRgb({r: pixel[0], g:pixel[1], b:pixel[2], a: Math.round(pixel[3]/255*100)/100});
            onChange(colorRgb);
        }

        function onChange(t, p){
            p = p || {};

            if (t.id == 'red') color.r = parseInt(t.value);
            if (t.id == 'green') color.g = parseInt(t.value);
            if (t.id == 'blue') color.b = parseInt(t.value);
            if (t.id == 'alpha') color.a = parseFloat(t.value);
            if (t.id == 'colorRgb') color = Color.rgbToColor(t.value);
            if (t.id == 'colorHex' ) color = Color.hexToColor(t.value);
            if (t.id == 'colorBox') color = Color.hexToColor(t.value);
            if (t.id == 'colorNameInput' ) color = Color.hexToColor(t.value);
            if (t.id == 'colorHsl') color = Color.hslToColor(t.value);
            if (t.id == 'colorCmyk') color = Color.cmykToColor(t.value);
            if (t.id == 'colorWebsafe') color = Color.hexToColor(t.value);


            if (t.id != 'red') red.value = color.r;
            if (t.id != 'green') green.value = color.g;
            if (t.id != 'blue') blue.value = color.b;
            if (t.id != 'alpha') alpha.value = color.a;
            if (t.id != 'colorRgb') colorRgb.value = Color.colorToRgb(color);
            if (t.id != 'colorHex')  colorHex.value = Color.colorToHex(color);
            if (t.id != 'colorHsl')  colorHsl.value = Color.colorToHsl(color);
            if (t.id != 'colorCmyk')  colorCmyk.value = Color.colorToCmyk(color);
            if (t.id != 'colorBox') colorBox.value = colorHex.value.substr(0,7);
            if (t.id != 'colorWebsafe') colorWebsafe.value = Color.colorToWebsafe(color);
            $('#colorBox').css('background-color', colorRgb.value);
            $(websafeExample).css('background-color', colorWebsafe.value);

            drawFavicon(colorHex.value);
            if (t.id != 'colorNameText') colorNameText.value = colorName.innerHTML = document.title = getSimilarColor(colorHex.value)[0];

            if (!p.noChangeLocation) {
                delay(function(){
                    if (window.history && history.replaceState) history.replaceState(undefined, undefined, Color.colorToHex(color));
                });
            }

            //Utils.copyToClipboard(colorHex.value);
        }

        function drawFavicon(hexColor) {
            var canvas = document.createElement("canvas");
            canvas.width = 16;
            canvas.height = 16;

            if (canvas.getContext) {
                var context = canvas.getContext('2d');

                context.fillStyle = hexColor;

                var roundedPixels = 4;

                context.beginPath();
                context.moveTo(0, roundedPixels);

                context.quadraticCurveTo(0, 0, roundedPixels, 0);
                context.lineTo(canvas.width - roundedPixels, 0);

                context.quadraticCurveTo(canvas.width, 0, canvas.width, roundedPixels);
                context.lineTo(canvas.width, canvas.height - roundedPixels);

                context.quadraticCurveTo(canvas.width, canvas.height, canvas.width - roundedPixels, canvas.height);
                context.lineTo(roundedPixels, canvas.height);

                context.quadraticCurveTo(0, canvas.height, 0, canvas.height - roundedPixels);
                context.lineTo(0, roundedPixels);

                context.fill();

                if (canvas.toDataURL) {
                    try {
                        var dataURL = canvas.toDataURL("image/png");
                        $('HEAD').children("link[rel*=icon]").remove();
                        $("<link/>").attr({
                            rel: "shortcut icon",
                            type: "image/png",
                            href: dataURL
                        }).appendTo('HEAD');
                    } catch (e) {
                        // do nothing
                    }
                }
            }
        }

        function getColorsNames(value){
            return new Promise(function (resolve, reject) {
                var res = [];
                var val = value.value.toLowerCase();
                for (var i=0; i<colorNames.length; i++){
                    if ((colorNames[i][0]+colorNames[i][1]).toLowerCase().indexOf(val) !== -1) {
                        res.push([
                            `<span style='background-color: ${colorNames[i][2]}'>&nbsp;&nbsp;&nbsp;&nbsp;</span> ${colorNames[i][1]}`,
                            colorNames[i][2],
                        ]);
                        if (res.length > 50) break;
                    }
                }

                resolve(res);
            });
        }

        function pad(num, size) {
            var s = num+"";
            while (s.length < size) s = "0" + s;
            return s;
        }

        // increase/decrease on key up/down
        window.addEventListener("keydown", function(e){ //d(e)
            if (e.target.tagName !== 'INPUT') return;
            if (e.key !== 'ArrowUp' && e.key !== 'ArrowDown') return;
            if (e.target.selectionStart === null) return;

            var pos = e.target.selectionStart;
            var r = e.target.value.matchAt('[\\d.-]+', pos);
            if (r) {
                var old = parseFloat(r[0]);
                var inc = e.key === 'ArrowUp' ? 1 : -1;
                if (old > 0 && old < 1) inc /= 100;
                var newValue = old + inc;
                newValue = Math.round(newValue*100)/100;

                e.target.value = e.target.value.replaceAt(r.index, r[0].length, newValue);
                e.target.dispatchEvent(new Event('change', { 'bubbles': true }));
                e.target.selectionEnd = e.target.selectionStart = pos;
            }
            e.preventDefault();
        });

        // load
        colorHex.value = location.hash || '#ffffff';
        onChange(colorHex, {noChangeLocation: true});

        $(document).on('input change', 'INPUT', function(e){ onChange(e.target) });
        $(document).on('focus', 'INPUT', function(e){
            e.target.select();
            //copy();
        });

        $(document).on('click', '.recent A', function(e){
            colorRgb.value = e.target.style.backgroundColor;
            onChange(colorRgb);
        });

        // load file
        var fileLoader = new FileLoader({fileElement: imageLoader});
        fileLoader.onLoadFiles = function(files){
            if (typeof FileReader !== "function") {
                return snackbar('Ваш браузер не поддерживает загрузку файлов');
            }

            if (!(files[0].constructor.name == 'Blob' || files[0].constructor.name == 'File')) {
                return snackbar('Не поддерживаемый тип файла: '+files[0].constructor.name);
            }

            var reader = new FileReader();
            reader.onload = function(event){
                imageObj.src = event.target.result;
            };
            reader.readAsDataURL(files[0]);
        }
    </script>

	</MAIN>
